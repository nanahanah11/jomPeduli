		<script>
        var db;
            
        window.onload=function()
        {
            document.getElementById('btnSave').addEventListener('click', saveData);
            db = window.openDatabase("report",  "1.0", "aidaraihanah", 200000);
        }
        
        function saveData(e)
        {
            db.transaction(saveRecord, onSuccess, onError);
        }
            
        function saveRecord(transaction)
        {
            var note= document.getElementById('note').value;
            //var email = document.getElementById('email').value;
            transaction.executeSql('CREATE TABLE IF NOT EXISTS reportList (id INTEGER PRIMARY KEY AUTOINCREMENT, Note TEXT NOT NULL) ');
            
            var sql= "INSERT INTO reportList (Note) VALUES ('" + note +"')";
            console.log(sql);
            transaction.executeSql(sql);
            transaction.executeSql("SELECT * FROM reportList", [], getSuccess, getError);
        }
        function getSuccess(tx, result)
        {
            var rows = result.rows;
            for(var x=0; x< rows.length; x++){
                var name = result.rows[x].Note;
                //var email = result.rows[x].Email;
                var out = "<li>" + note + "</li>";
                //document.getElementById('members').innerHTML += out;
            }
            
            $('#members').listview('refresh');
        }
        function getError(e)
        {
            console.log(e);
        }
            
        function onSuccess()
        {
            console.log("Record Saved");
        }
            
        function onError(error)
        {
            console.log(error);
        }
        </script>
